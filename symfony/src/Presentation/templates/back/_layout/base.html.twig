{% extends '_layout/base.html.twig' %}

{% block skin %}admin{% endblock %}
{% block title %}Bienvenue{% endblock %}
{% block titleSuffix %} | Admin{% endblock %}

{% block navbar %}
    <header id="slide-out" class="sidenav">
        <div class="sidenav-wrapper">
            <h1 class="sr-only">Menu</h1>
            <a class="brand-logo" href="{{ path('accueil.back') }}" title="Fondatools">
                <span class="brand-image">
                    {% include '_partial/ui/_icone.html.twig' with {icone: 'build'} only %}
                </span>
                <span class="brand-name">
                    <img src="{{ asset('assets/images/brand_name_white.png') }}" width="401" height="64" alt="Fondatools"/>
                </span>
            </a>
            <nav class="main-menu">
                {% include '_partial/nav/_menu.html.twig' with { menu: getBackMenuPrincipal() } only %}
                {% block subnav %}{% endblock %}
            </nav>
            <nav class="secondary-menu">
                {% include '_partial/nav/_menu.html.twig' with { menu: getBackMenuSecondaire() } only %}
                {% include 'back/_layout/_menu_utilisateur.html.twig' only %}
            </nav>
        </div>
    </header>
{% endblock %}